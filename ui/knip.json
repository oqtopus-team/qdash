{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": ["src/app/**/*.{ts,tsx}"],
  "project": ["src/**/*.{ts,tsx,js,jsx}"],
  "ignore": [
    "**/*.d.ts",
    "**/node_modules/**",
    "**/.next/**",
    "**/build/**",
    "**/dist/**",
    "src/client/**/*.ts",
    "src/schemas/**/*.ts"
  ],
  "ignoreDependencies": ["sharp", "daisyui", "tailwindcss", "autoprefixer", "@tailwindcss/typography"],
  "next": {
    "entry": [
      "next.config.js",
      "src/app/**/page.tsx",
      "src/app/**/layout.tsx",
      "src/app/**/error.tsx",
      "src/app/**/loading.tsx",
      "src/app/**/not-found.tsx",
      "src/app/**/route.ts",
      "src/middleware.ts"
    ]
  },
  "vitest": {
    "entry": ["vitest.config.mts", "vitest.setup.ts", "src/**/*.test.{ts,tsx}"]
  },
  "eslint": true,
  "postcss": true,
  "typescript": true
}
