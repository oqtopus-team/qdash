ENV="oqtopus"

SUBNET=""
GATEWAY=""

# Ports
MONGO_PORT=27017
MONGO_EXPRESS_PORT=8081
POSTGRES_PORT=5432
PREFECT_PORT=4200
API_PORT=5715
UI_PORT=5714
DEPLOYMENT_SERVICE_PORT=8001

# URLs
CLIENT_URL=http://localhost:${UI_PORT:-5714}
NEXT_PUBLIC_API_URL=/api
#http://localhost:${API_PORT:-5715}
NEXT_PUBLIC_PREFECT_URL=http://localhost:${PREFECT_PORT}
PREFECT_API_URL=http://localhost:${PREFECT_PORT:-4200}/api
INTERNAL_API_URL=http://api:${API_PORT:-5715}

# MongoDB
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=example

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=prefect
POSTGRES_DB=prefect

# Data paths
POSTGRES_DATA_PATH="./postgres_data"
MONGO_DATA_PATH="./mongo_data/data/db"
CALIB_DATA_PATH="./calib_data"
QPU_DATA_PATH="./qpu_data"

# User Management
# Admin username and password - auto-creates admin user on first startup if not exists
QDASH_ADMIN_USERNAME=""
QDASH_ADMIN_PASSWORD=""

# Optional settings
SLACK_BOT_TOKEN=""
SLACK_CHANNEL_ID=""
SLACK_APP_TOKEN=""

CONFIG_PATH="./config/qubex"
CALIBTASKS_PATH="./src/qdash/workflow/calibtasks"
CONFIG_REPO_URL=""
GITHUB_TOKEN=""
GITHUB_USER=""

# Cloudflare Tunnel Token(optional)
TUNNEL_TOKEN=""

# Cloudflare Access Settings (optional)
CF_ACCESS_CLIENT_ID=""
CF_ACCESS_CLIENT_SECRET=""
CF_ACCESS_DOMAIN=""
QDASH_API_TOKEN=""

# AI Chat Assistant (optional)
# Enable the AI chat assistant in the UI (uses Ollama)
NEXT_PUBLIC_COPILOT_ENABLED=""

# Ollama settings
# Ollama must be running on the host machine with the model pulled.
# Model to use with Ollama (default: gpt-oss:20b, e.g., qwen3:32b, llama3.3:latest)
OLLAMA_MODEL=""
# Ollama URL (default: http://host.docker.internal:11434)
OLLAMA_URL=""

# Custom Metrics Configuration (optional)
# Set a custom path to metrics.yaml for user-defined metric settings.
# Priority: METRICS_CONFIG_PATH > config/custom/metrics.yaml > config/metrics.yaml
# See config/custom/metrics.yaml.template for customization guide.
METRICS_CONFIG_PATH=""
